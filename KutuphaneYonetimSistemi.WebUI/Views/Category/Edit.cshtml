@model LibraryManagementSystem.WebUI.Entity.Concrete.Category

@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

 
      
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="card card-success">

            <div class="card-body">
                <div class="card-header">
                    <h3 class="card-title">Kategori Bilgisi Düzenle </h3>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-2">
                        <label> Kategori Adı </label>
                    </div>
                    <div class="col-sm-6">

                        <div class="input-group mb-3">

                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-2">
                        <input type="submit" value="Güncelle" class="btn btn-success" />
                    </div>|
                    <div class="col-md-offset-2 ">
                        <a href="/Category/Index"><button class="btn btn-outline-dark">Listeye Dön</button></a>
                    </div>
                </div>
            </div>
        </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
