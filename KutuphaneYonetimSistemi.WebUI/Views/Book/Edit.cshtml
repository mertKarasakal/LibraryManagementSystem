@model LibraryManagementSystem.WebUI.Entity.Concrete.Book
@{
    ViewBag.Title = "Edit Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="card card-success">

        <div class="card-body">

            <div class="card-header">
                <h3 class="card-title">Edit Book </h3>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-2">
                    <label> User</label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <label> Category </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> Role </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Role" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-2">
                    <label> ISBN </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.Isbn, new { htmlAttributes = new { @class = "form-control", placeholder = " ISBN" } })
                        @Html.ValidationMessageFor(model => model.Isbn, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-2">
                    <label> Author </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", placeholder = "Author" } })
                        @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> Description </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description " } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> Number of Pages </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.EditorFor(model => model.NumberOfPages, new { htmlAttributes = new { @class = "form-control", placeholder = "Number of Pages" } })
                        @Html.ValidationMessageFor(model => model.NumberOfPages, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> ISBN </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control", style = "display:none", placeholder = " ISBN" } })
                        @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger", style = "display:none" })

                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>|
                <div class="col-md-offset-2 ">
                    <a href="/Book/Index"><button class="btn btn-outline-dark">Back to list</button></a>
                </div>
            </div>

        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}