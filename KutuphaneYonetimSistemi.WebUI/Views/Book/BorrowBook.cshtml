@model LibraryManagementSystem.WebUI.Entity.Concrete.Models.BookModel

@{
    ViewBag.Title = "Borrow a Book";
}

@using (Html.BeginForm("BorrowBook", "Book", null, FormMethod.Post,
                              new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <br />

    <div class="card card-olive">
        <div class="card-header">
            <h3 class="card-title">Borrow a Book       </h3>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="uploadFile"> Image </label>
                <br />
                <input id="ImagePath" title="Upload a product image"
                       type="file" name="uploadFile" class="btn btn-outline-dark" />
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-outline-success">Demand</button>
        </div>
    </div>
}


@if (ViewBag.BookNotAvailable != null) {
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Warning!</h5> @ViewBag.BookNotAvailable
    </div>
}
@if (ViewBag.Successful != null) {
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-check"></i> Congrulations!</h5>
        @ViewBag.Successful
    </div>
}
@if (ViewBag.BookInUse != null) {
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-check"></i> Maalesef!</h5>
        @ViewBag.BookInUse
    </div>
}@if (ViewBag.BookExpired != null) {
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-check"></i> Maalesef!</h5>
        @ViewBag.BookExpired
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}