@model LibraryManagementSystem.WebUI.Entity.Concrete.Book

@{
    ViewBag.Title = "Kitap Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />


@using (Html.BeginForm("Create", "Book", null, FormMethod.Post,
                              new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()



    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card card-success">



        <div class="card-body">

            <div class="card-header">
                <h3 class="card-title">Kitap Ekle </h3>
            </div>
            <br />

            <div class="row">
                <div class="col-sm-2">
                    <label> Kimin Üzerinde</label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.DropDownList("UserId", null, "Kullanıcı seçiniz", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <label> Kategorisi </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.DropDownList("CategoryId", null, "Kategori seçiniz", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> İsim </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "İsim" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>




            <div class="row">
                <div class="col-sm-2">
                    <label> Yazar </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">
                        @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control", placeholder = "Yazar" } })
                        @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> Açıklama </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Açıklama " } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> Sayfa Sayısı </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        @Html.EditorFor(model => model.NumberOfPages, new { htmlAttributes = new { @class = "form-control", placeholder = "Sayfa Sayısı " } })
                        @Html.ValidationMessageFor(model => model.NumberOfPages, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label> Resim </label>
                </div>
                <div class="col-sm-6">

                    <div class="input-group mb-3">

                        <div class="editor-field">
                            <input id="ImagePath" title="Upload a product image"
                                   type="file" name="uploadFile" class="btn btn-outline-dark" />
                        </div>
                    </div>
                </div>
            </div>




            @if (ViewBag.ISBNN != null)
            {
                <div class="alert alert-warning alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fas fa-check"></i> Maalesef!</h5>
                    @ViewBag.ISBNN
                </div>
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Ekle" class="btn btn-success" />
                </div>
            </div>


        </div>
    </div>




}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

