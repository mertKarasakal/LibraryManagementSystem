@model LibraryManagementSystem.WebUI.Entity.Concrete.Models.BookModel
@{
    ViewBag.Title = "Deliver A Book";
}
@using (Html.BeginForm("DeliverBook", "Book", null, FormMethod.Post,
    new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })



    <br />

    <div class="card card-warning">
        <div class="card-header">
            <h3 class="card-title">Deliver A Book </h3>
        </div>
        <div class="card-body">


            <div class="form-group">
                <label for="uploadFile"> Image </label>
                <br />
                <input id="ImagePath" title="Upload a product image"
                       type="file" name="uploadFile" class="btn btn-outline-dark" />

            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-outline-warning">Deliver</button>
        </div>
    </div>
}

@if (ViewBag.BookNotAvailable != null) {
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-ban"></i> Warning!</h5> @ViewBag.BookNotAvailable
    </div>
} else if (ViewBag.Successful != null) {
    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-check"></i> Congrulations!</h5>
        @ViewBag.Successful
    </div>
}